<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/background_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/bg_1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="45dp"
            android:background="@drawable/img_bg1"
            android:layout_width="120dp"
            android:layout_height="160dp" />
        <Button
            android:id="@+id/bg_2"
            android:layout_marginTop="10dp"
            android:layout_marginRight="45dp"
            android:background="@drawable/img_bg2"
            android:layout_alignParentRight="true"
            android:layout_width="120dp"
            android:layout_height="160dp" />
        <Button
            android:id="@+id/bg_3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:background="@drawable/img_bg3"
            android:layout_width="120dp"
            android:layout_height="160dp" />
        <Button
            android:id="@+id/bg_4"
            android:layout_marginRight="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/img_bg4"
            android:layout_width="120dp"
            android:layout_height="160dp" />
        <Button
            android:id="@+id/bg_5"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="45dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/img_bg5"
            android:layout_width="120dp"
            android:layout_height="160dp" />
        <Button
            android:id="@+id/bg_6"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/img_bg6"
            android:layout_width="120dp"
            android:layout_height="160dp" />
    </RelativeLayout>
</RelativeLayout>